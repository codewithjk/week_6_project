<%- include('head') -%>
<div class="bg-primary">
    <h1 class="text-center py-4">Admin Dashboard</h1>

</div>
<section>
  <div class="container">
    <div class="p-2 w-100 ">
    <!-- User List -->
    <div class=" row  p-1 rounded bg-info d-flex align-items-center justify-content-center ">
        <p class="col-2 p-1 m-0 "> S.No</p>
        <p class="col-2 p-1 m-0 text-start"> Name</p>
        <p class="col-2 p-1 m-0 text-start"> Email</p>
        <p class="col-2 p-1 m-0 text-start">Password</p>
        <div class="col-4 d-flex justify-content-end gap-1">
          
            <div class=" h-100">
              <div class="d-flex justify-content-center h-100">
                <div class="searchbar ">
                  <input class="search_input"  id="searchInput" type="text" name="" placeholder="Search...">
                  <a id="searchLink" href="/admin/dashboard/?search=" class="search_icon"><i class="fas fa-search"></i></a>
                </div>
              </div>
            </div>
          <div class=" p-1 m-0 text-start  add-user-button">
            <a href="/admin/adduser/" class=""><i class="fa-solid fa-user-plus add_icon d-flex justify-content-center align-items-center"></i></a> 
          </div>
          <div class=" p-1 m-0 text-start  add-user-button">
            <a href="/admin/dashboard/" class=""><i class="fa-solid fa-arrows-rotate add_icon d-flex justify-content-center align-items-center"></i></a> 
          </div>

        </div>
    </div>
  
  <% for(let i=0; i<users.length; i++) { %>
    <div class=" row bg-body-secondary my-1 p-1 rounded d-flex align-items-center justify-content-center ">
      <p class="col-2 p-1 m-0 text-start"><%= i + 1 %></p>
      <p class="col-2 p-1 m-0 text-start"><%= users[i].name %></p>
      <p class="col-2 p-1 m-0 text-start"><%= users[i].email %></p>
      <p class="col-2 p-1 m-0 text-start"><%= users[i].password %></p>

      <!-- User Actions -->
      
      <div class=" col-4 d-flex justify-content-center gap-5">
        <!-- Edit User Button -->
        <a href="/admin/edituser/?id=<%= users[i]._id %>" class="edit-user-button"><button class="btn btn-secondary">Edit</button></a>
    <!-- </div> -->
        <!-- Delete User Button  -->
        <!-- <div class="col-2"> -->
        <a href="/admin/deleteuser/?id=<%= users[i]._id %>" class="delete-user-button" onclick="return confirm('Are you sure you want to delete this user?')"><button class="btn btn-danger">Delete</button></a>
    </div>

    </div>
  <% } %>
</div>
  </div>
</section>
<%- include('foot') -%>
